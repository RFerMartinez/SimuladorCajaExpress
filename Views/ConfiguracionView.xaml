<UserControl x:Class="CajaExpressSim.Views.ConfiguracionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Parámetros de Simulación" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <GroupBox Header="Recursos Generales" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Cantidad de Cajas (Servidores):"/>
                        <TextBox Text="{Binding CantidadCajas}" Margin="0,5,0,10" Padding="3"/>

                        <TextBlock Text="Tiempo de Cobro Adicional (Segundos):"/>
                        <TextBox Text="{Binding TiempoCobro}" Margin="0,5,0,10" Padding="3"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Tasas de Llegada (Tiempo Medio entre Clientes)" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Franja 1 (08:00 - 12:00) [Segundos]:"/>
                        <TextBox Text="{Binding MediaLlegada1}" Margin="0,5,0,10" Padding="3"/>

                        <TextBlock Text="Franja 2 (12:00 - 15:00) [Segundos]:"/>
                        <TextBox Text="{Binding MediaLlegada2}" Margin="0,5,0,10" Padding="3"/>

                        <TextBlock Text="Franja 3 (15:00 - 22:00) [Segundos]:"/>
                        <TextBox Text="{Binding MediaLlegada3}" Margin="0,5,0,10" Padding="3"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <GroupBox Header="Tiempos de Servicio (Distribución Normal)" Padding="10">
                    <StackPanel>
                        <TextBlock Text="CLIENTE ESTÁNDAR" FontWeight="Bold" Margin="0,10,0,5"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Media (u):"/>
                                <TextBox Text="{Binding MediaEstandar}" Margin="0,5,0,0" Padding="3"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Desviación (σ):"/>
                                <TextBox Text="{Binding DesvioEstandar}" Margin="0,5,0,0" Padding="3"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Nota: Puedes agregar aquí los campos para Express y Carro Completo extendiendo el ViewModel." 
                                   Foreground="Gray" TextWrapping="Wrap" Margin="0,20,0,0" FontStyle="Italic"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>

        <Button Grid.Row="2" Content="Guardar Configuración" 
                Command="{Binding GuardarCommand}"
                Height="40" Width="200" HorizontalAlignment="Right" Margin="0,20,0,0"
                Background="#007ACC" Foreground="White" FontWeight="Bold"/>
    </Grid>
</UserControl>