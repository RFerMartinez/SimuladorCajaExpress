<UserControl x:Class="CajaExpressSim.Views.ResultadosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1100"
             Background="{StaticResource ColorFondoPrincipal}">

    <UserControl.Resources>
        <Style x:Key="EstiloBotonExportar" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#63B3ED"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="borde" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="15" 
                                Padding="12,6"
                                BorderThickness="1"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="borde" Property="Background" Value="#1AFFFFFF"/>
                                <Setter TargetName="borde" Property="BorderBrush" Value="#33FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="borde" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="CAJA EXPRESS ANALYTICS | " FontSize="22" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Resultados del Período" FontSize="22" Foreground="{StaticResource ColorTextoSecundario}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock Text="Exportar: " Foreground="{StaticResource ColorTextoSecundario}" VerticalAlignment="Center" FontSize="14" Margin="0,0,5,0"/>

                <Button Content="PDF" Command="{Binding ExportarPdfCommand}" Style="{StaticResource EstiloBotonExportar}"/>
                <Button Content="TXT" Command="{Binding ExportarTxtCommand}" Style="{StaticResource EstiloBotonExportar}"/>
            </StackPanel>
        </Grid>

        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,20">
            <Border Style="{StaticResource EstiloTarjeta}">
                <StackPanel>
                    <TextBlock Text="Experiencia del Cliente (W)" Style="{StaticResource TituloTarjeta}" FontSize="16"/>
                    <TextBlock Text="{Binding PromedioSistema, StringFormat={}{0:N1} seg}" 
                               FontSize="30" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource EstiloTarjeta}">
                <StackPanel>
                    <TextBlock Text="Tiempo en Cola (Wq)" Style="{StaticResource TituloTarjeta}" FontSize="16"/>
                    <TextBlock Text="{Binding PromedioCola, StringFormat={}{0:N1} seg}" 
                               FontSize="30" FontWeight="Bold" Foreground="{StaticResource ColorAccionVerde}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource EstiloTarjeta}">
                <StackPanel>
                    <TextBlock Text="Largo Cola Promedio (Lq)" Style="{StaticResource TituloTarjeta}" FontSize="16"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding LargoColaPromedio, StringFormat={}{0:N1}}" 
                                   FontSize="30" FontWeight="Bold" Foreground="#63B3ED"/>
                        <TextBlock Text=" personas" FontSize="18" Foreground="{StaticResource ColorTextoSecundario}" VerticalAlignment="Bottom" Margin="5,0,0,4"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource EstiloTarjeta}" BorderBrush="{StaticResource ColorPeligro}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Pico de Congestión" Style="{StaticResource TituloTarjeta}" Foreground="#FC8181" FontSize="16"/>
                    <TextBlock Text="{Binding MaxCola, StringFormat={}{0} personas}" 
                               FontSize="30" FontWeight="Bold" Foreground="{StaticResource ColorPeligro}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">

                <Border Style="{StaticResource EstiloTarjeta}" Height="300">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Utilización de Recursos (ρ)" Style="{StaticResource TituloTarjeta}" FontSize="18" Foreground="White"/>

                        <DataGrid Grid.Row="1" ItemsSource="{Binding ListaUtilizacion}" 
                                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                                  Background="Transparent" BorderThickness="0" HeadersVisibility="None"
                                  GridLinesVisibility="None" RowBackground="Transparent" VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.CanContentScroll="False">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,5">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="{Binding IdCaja, StringFormat=CAJA {0}: }" Foreground="White" FontWeight="Bold" FontSize="13"/>
                                                    <TextBlock Text="{Binding Porcentaje, StringFormat={}{0:N1}% Ocupado}" Foreground="{StaticResource ColorTextoSecundario}" FontSize="13"/>
                                                </StackPanel>
                                                <ProgressBar Grid.Row="1" Value="{Binding Porcentaje}" Minimum="0" Maximum="100" Height="8" 
                                                             Background="#2D3748" BorderThickness="0" Foreground="{StaticResource ColorAccionVerde}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <Border Style="{StaticResource EstiloTarjeta}" Background="Transparent" BorderBrush="{StaticResource ColorPeligro}" BorderThickness="2" Margin="5,15,5,5" Height="140">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⚠️ INDICADOR DE CALIDAD CRÍTICO" Foreground="{StaticResource ColorPeligro}" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                        <TextBlock Text="Tiempo Máximo de Espera Registrado:" Foreground="White" Margin="0,5,0,0" HorizontalAlignment="Center" FontSize="14"/>
                        <TextBlock Text="{Binding MaxEspera, StringFormat=# {0:N0} Segundos}" 
                                   Foreground="{StaticResource ColorPeligro}" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="2">

                <Border Style="{StaticResource EstiloTarjeta}">
                    <StackPanel>
                        <TextBlock Text="Calidad de Servicio: Percentiles de Espera" Style="{StaticResource TituloTarjeta}" Foreground="White" FontSize="19"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="P50 (Mediana):" Foreground="#A0AEC0" FontSize="14"/>
                            <TextBlock Grid.Column="1" Text="{Binding P50, StringFormat={}{0:N1} seg}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                        </Grid>
                        <Separator Background="#2C3545" Margin="0,5"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="P90:" Foreground="#A0AEC0" FontSize="14"/>
                            <TextBlock Grid.Column="1" Text="{Binding P90, StringFormat={}{0:N1} seg}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                        </Grid>
                        <Separator Background="#2C3545" Margin="0,5"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="P95 (Casi peor caso):" Foreground="#A0AEC0" FontSize="14"/>
                            <TextBlock Grid.Column="1" Text="{Binding P95, StringFormat={}{0:N1} seg}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource EstiloTarjeta}" Margin="5,15,5,5">
                    <StackPanel>
                        <TextBlock Text="Desglose de Clientes Atendidos" Style="{StaticResource TituloTarjeta}" Foreground="White" FontSize="19"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Estándar:" Foreground="#A0AEC0" FontSize="14"/>
                            <TextBlock Grid.Column="1" Text="{Binding CantEstandar}" Foreground="#007ACC" FontWeight="Bold" HorizontalAlignment="Right" FontSize="14"/>
                        </Grid>

                        <Separator Background="#2C3545" Margin="0,5"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Express (Rápido):" Foreground="#A0AEC0" FontSize="14"/>
                            <TextBlock Grid.Column="1" Text="{Binding CantExpress}" Foreground="#E65100" FontWeight="Bold" HorizontalAlignment="Right" FontSize="14"/>
                        </Grid>

                        <Separator Background="#2C3545" Margin="0,5"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Carro Completo:" Foreground="#A0AEC0" FontSize="14"/>
                            <TextBlock Grid.Column="1" Text="{Binding CantCarro}" Foreground="#2E7D32" FontWeight="Bold" HorizontalAlignment="Right" FontSize="14"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <UniformGrid Columns="2" Margin="0,15,0,0">
                    <Border Style="{StaticResource EstiloTarjeta}" Margin="0,0,5,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Atendidos" VerticalAlignment="Center" Style="{StaticResource TituloTarjeta}" Margin="0" FontSize="16"/>
                            <TextBlock Grid.Column="1" Text="{Binding TotalClientes}" 
                                       FontSize="26" FontWeight="Bold" Foreground="#63B3ED" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource EstiloTarjeta}" Margin="5,0,0,0" BorderBrush="#502020" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Rechazados" VerticalAlignment="Center" Style="{StaticResource TituloTarjeta}" Margin="0" Foreground="#FC8181" FontSize="16"/>
                            <TextBlock Grid.Column="1" Text="{Binding Rechazados}" 
                                       FontSize="26" FontWeight="Bold" Foreground="#FC8181" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </UniformGrid>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>